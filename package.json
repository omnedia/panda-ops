{
  "name": "@omnedia/panda-ops",
  "version": "1.0.1",
  "description": "A TypeScript-based tool that analyzes pull requests and adds AI-generated review comments via the OpenAI API.",
  "type": "module",
  "main": "./main.js",
  "bin": {
    "panda-ops": "./main.js"
  },
  "scripts": {
    "build:run": "npm run build && npm run start",
    "build": "tsc && npm run copy-meta",
    "copy-meta": "copyfiles package.json README.md LICENSE dist",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "openai": "^6.6.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "3.25"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
